{
  "testConfiguration": {
    "name": "AWE Player Integration Tests",
    "version": "1.0.0",
    "description": "Comprehensive integration testing for AWE Player EMU8000 emulator",
    "environment": {
      "sampleRate": 44100,
      "bufferSizes": [128, 256, 512],
      "maxVoices": 32,
      "timeout": 30000
    },
    "testSuites": {
      "critical": {
        "description": "Critical path tests that must pass for basic functionality",
        "tests": [
          "wasm-load",
          "wasm-exports", 
          "audio-worklet-init",
          "midi-queue",
          "audio-buffer-generation",
          "complete-midi-pipeline"
        ]
      },
      "core": {
        "description": "Core functionality tests",
        "tests": [
          "debug-logging",
          "midi-note-events",
          "midi-cc-effects",
          "voice-allocation",
          "envelope-processing",
          "frequency-accuracy"
        ]
      },
      "effects": {
        "description": "Send/return effects system tests",
        "tests": [
          "reverb-processor",
          "chorus-processor", 
          "effects-send-routing",
          "effects-real-time-control"
        ]
      },
      "ui": {
        "description": "User interface integration tests",
        "tests": [
          "effects-control-panel",
          "voice-activity-monitor",
          "soundfont-loader",
          "ui-controls",
          "virtual-keyboard"
        ]
      },
      "integration": {
        "description": "End-to-end system integration tests",
        "tests": [
          "polyphonic-synthesis",
          "effects-integration", 
          "ui-audio-sync",
          "midi-device-integration"
        ]
      },
      "performance": {
        "description": "Performance and stress testing",
        "tests": [
          "cpu-usage",
          "memory-usage",
          "audio-latency",
          "stress-test-32-voices"
        ]
      }
    },
    "expectations": {
      "minimumPassRate": 0.95,
      "criticalPassRate": 1.0,
      "maxAudioLatency": 50,
      "maxCPUUsage": 1000,
      "maxMemoryDelta": 10485760
    },
    "reporting": {
      "formats": ["console", "json", "junit"],
      "includePerformanceMetrics": true,
      "includeTiming": true,
      "includeSystemInfo": true
    },
    "ci": {
      "failFast": false,
      "retryCount": 2,
      "parallelSuites": false,
      "artifacts": {
        "saveReports": true,
        "saveScreenshots": false,
        "saveLogs": true
      }
    },
    "browser": {
      "supportedBrowsers": [
        "chrome >= 90",
        "firefox >= 85",
        "safari >= 14",
        "edge >= 90"
      ],
      "requiredFeatures": [
        "AudioWorklet",
        "WebAssembly",
        "ES2020"
      ],
      "optionalFeatures": [
        "WebMIDI"
      ]
    }
  },
  "testData": {
    "midiNotes": {
      "lowRange": [24, 36, 48],
      "midRange": [60, 64, 67, 72],
      "highRange": [84, 96, 108]
    },
    "ccValues": {
      "reverb": [0, 32, 64, 96, 127],
      "chorus": [0, 32, 64, 96, 127]
    },
    "testSequences": {
      "cMajorScale": [60, 62, 64, 65, 67, 69, 71, 72],
      "chromatic": [60, 61, 62, 63, 64, 65, 66, 67, 68, 69, 70, 71],
      "arpeggios": {
        "cMajor": [60, 64, 67, 72],
        "fMajor": [65, 69, 72, 77],
        "gMajor": [67, 71, 74, 79]
      }
    },
    "performanceTargets": {
      "maxProcessingTimeMs": {
        "singleVoice": 1.0,
        "eightVoices": 5.0,
        "thirtyTwoVoices": 20.0
      },
      "maxLatencyMs": {
        "midiToAudio": 50,
        "effectsProcessing": 10,
        "uiUpdates": 100
      },
      "maxMemoryUsageMB": {
        "baseline": 50,
        "withSoundFont": 200,
        "stress32Voices": 300
      }
    }
  },
  "debugging": {
    "logLevel": "info",
    "captureWasmLogs": true,
    "captureJSErrors": true,
    "capturePerformanceMetrics": true,
    "detailedTimings": false
  }
}