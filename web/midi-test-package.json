{
  "name": "awe-player-midi-device-tests",
  "version": "1.0.0",
  "description": "Advanced MIDI device testing and compatibility validation for AWE Player",
  "scripts": {
    "test": "node midi-test-automation.js",
    "test:basic": "node midi-test-automation.js --suite basic",
    "test:comprehensive": "node midi-test-automation.js --suite comprehensive",
    "test:advanced": "node midi-test-automation.js --suite advanced",
    "test:all": "node midi-test-automation.js --suite all",
    "test:latency": "node midi-test-automation.js --suite basic --timeout 30000",
    "test:ci": "node midi-test-automation.js --suite comprehensive --output ./ci-results",
    "test:debug": "node midi-test-automation.js --no-headless --verbose",
    "test:roland": "node midi-test-automation.js --filter Roland",
    "test:yamaha": "node midi-test-automation.js --filter Yamaha",
    "test:interfaces": "node midi-test-automation.js --filter Interface",
    "serve": "npx serve . -p 3000",
    "serve:tester": "npx serve . -p 3000 & open http://localhost:3000/midi-device-tester.html"
  },
  "keywords": [
    "midi",
    "webmidi",
    "device-testing",
    "compatibility",
    "automation",
    "emu8000",
    "audio",
    "music",
    "latency",
    "performance"
  ],
  "author": "AWE Player Team",
  "license": "MIT",
  "devDependencies": {
    "puppeteer": "^21.0.0",
    "commander": "^11.0.0",
    "chalk": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spetrequin/awe-synth.git"
  },
  "bugs": {
    "url": "https://github.com/spetrequin/awe-synth/issues"
  },
  "homepage": "https://github.com/spetrequin/awe-synth#readme",
  "midiDeviceSupport": {
    "webMidiRequired": true,
    "browserSupport": {
      "chrome": "43+",
      "edge": "79+", 
      "firefox": "none",
      "safari": "limited"
    },
    "testedManufacturers": [
      "Roland",
      "Yamaha", 
      "Korg",
      "M-Audio",
      "Akai Professional",
      "Novation",
      "Arturia",
      "Native Instruments",
      "MOTU"
    ]
  },
  "testConfiguration": {
    "testSuites": {
      "basic": {
        "description": "Essential MIDI functionality tests",
        "tests": [
          "device-enum",
          "input-access", 
          "output-access",
          "note-messages"
        ],
        "duration": "2-5 minutes",
        "useCase": "Quick device validation"
      },
      "comprehensive": {
        "description": "Complete MIDI feature testing",
        "tests": [
          "device-enum",
          "input-access",
          "output-access", 
          "state-changes",
          "note-messages",
          "cc-messages",
          "pc-messages",
          "pitchbend-messages",
          "timestamp-accuracy",
          "input-latency"
        ],
        "duration": "5-10 minutes",
        "useCase": "Production readiness validation"
      },
      "advanced": {
        "description": "Professional MIDI testing with edge cases",
        "tests": [
          "device-enum",
          "input-access",
          "output-access",
          "state-changes", 
          "note-messages",
          "cc-messages",
          "pc-messages",
          "pitchbend-messages",
          "sysex-messages",
          "timestamp-accuracy",
          "hires-timing",
          "input-latency",
          "rapid-events",
          "multi-channel",
          "running-status",
          "midi-clock",
          "active-sensing"
        ],
        "duration": "10-15 minutes",
        "useCase": "Professional device certification"
      }
    },
    "compatibilityThresholds": {
      "excellent": {
        "minScore": 90,
        "maxLatency": 10,
        "minTestsPassed": 95
      },
      "good": {
        "minScore": 75,
        "maxLatency": 20,
        "minTestsPassed": 85
      },
      "fair": {
        "minScore": 60,
        "maxLatency": 40,
        "minTestsPassed": 70
      },
      "poor": {
        "minScore": 0,
        "maxLatency": 100,
        "minTestsPassed": 0
      }
    },
    "performanceTargets": {
      "professional": {
        "maxLatency": 10,
        "minThroughput": 500,
        "maxJitter": 2
      },
      "prosumer": {
        "maxLatency": 20,
        "minThroughput": 200,
        "maxJitter": 5
      },
      "consumer": {
        "maxLatency": 50,
        "minThroughput": 100,
        "maxJitter": 10
      }
    }
  },
  "deviceDatabase": {
    "version": "2.1",
    "lastUpdated": "2025-08-03",
    "testedDevices": 47,
    "manufacturers": {
      "Roland": {
        "reliability": 95,
        "knownIssues": [],
        "recommendations": [
          "Enable PC1 mode for program changes",
          "Use MIDI output mode instead of USB AUDIO"
        ]
      },
      "Yamaha": {
        "reliability": 93,
        "knownIssues": [],
        "recommendations": [
          "Set MIDI OUT to USB in device settings",
          "Enable LOCAL OFF to prevent double triggering"
        ]
      },
      "Korg": {
        "reliability": 90,
        "knownIssues": [],
        "recommendations": [
          "Update firmware for best compatibility"
        ]
      },
      "M-Audio": {
        "reliability": 85,
        "knownIssues": ["timing_jitter"],
        "recommendations": [
          "Install M-Audio drivers not Windows generic",
          "Set buffer size to 256 samples or lower"
        ]
      },
      "Akai": {
        "reliability": 88,
        "knownIssues": [],
        "recommendations": [
          "Use latest firmware",
          "Configure velocity curves appropriately"
        ]
      }
    }
  }
}