{
  "name": "awe-player-soundfont-tests",
  "version": "1.0.0", 
  "description": "Advanced SoundFont compatibility testing and validation for AWE Player",
  "scripts": {
    "test": "node soundfont-test-automation.js",
    "test:basic": "node soundfont-test-automation.js --suite basic",
    "test:comprehensive": "node soundfont-test-automation.js --suite comprehensive", 
    "test:performance": "node soundfont-test-automation.js --suite performance",
    "test:compatibility": "node soundfont-test-automation.js --suite compatibility",
    "test:all": "node soundfont-test-automation.js --suite all",
    "test:file": "node soundfont-test-automation.js --file",
    "test:batch": "node soundfont-test-automation.js --batch ./soundfonts/",
    "test:ci": "node soundfont-test-automation.js --suite comprehensive --output ./ci-results",
    "test:debug": "node soundfont-test-automation.js --no-headless --verbose",
    "test:memory": "node soundfont-test-automation.js --suite performance --memory-profile",
    "test:large": "node soundfont-test-automation.js --filter large --timeout 300000",
    "analyze": "node soundfont-test-automation.js --analyze-only",
    "validate": "node soundfont-test-automation.js --validate-only",
    "benchmark": "node soundfont-test-automation.js --benchmark",
    "serve": "npx serve . -p 3000",
    "serve:tester": "npx serve . -p 3000 & open http://localhost:3000/soundfont-compatibility-tester.html"
  },
  "keywords": [
    "soundfont",
    "sf2", 
    "emu8000",
    "compatibility",
    "testing",
    "validation",
    "automation",
    "audio",
    "synthesis",
    "performance",
    "memory",
    "optimization"
  ],
  "author": "AWE Player Team",
  "license": "MIT",
  "devDependencies": {
    "puppeteer": "^21.0.0",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "fast-glob": "^3.3.0",
    "filesize": "^10.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spetrequin/awe-synth.git"
  },
  "bugs": {
    "url": "https://github.com/spetrequin/awe-synth/issues"
  },
  "homepage": "https://github.com/spetrequin/awe-synth#readme",
  "soundFontSupport": {
    "formatVersion": "2.0",
    "maxFileSize": "2GB",
    "recommendedSize": "50-200MB",
    "supportedExtensions": [".sf2", ".SF2"],
    "generatorSupport": {
      "total": 58,
      "implemented": 58,
      "compliance": "100%"
    },
    "sampleFormats": [
      "16-bit PCM",
      "24-bit PCM", 
      "32-bit PCM",
      "8-bit PCM"
    ],
    "sampleRates": [
      "8000Hz",
      "16000Hz", 
      "22050Hz",
      "44100Hz",
      "48000Hz",
      "88200Hz",
      "96000Hz"
    ]
  },
  "testConfiguration": {
    "testSuites": {
      "basic": {
        "description": "Essential SoundFont validation tests",
        "tests": [
          "file-format",
          "riff-structure", 
          "chunk-validation",
          "basic-parsing",
          "preset-count",
          "instrument-count",
          "sample-count"
        ],
        "duration": "1-2 minutes",
        "useCase": "Quick file validation"
      },
      "comprehensive": {
        "description": "Complete SoundFont compatibility testing", 
        "tests": [
          "file-format",
          "riff-structure",
          "chunk-validation", 
          "info-chunk",
          "sdta-chunk",
          "pdta-chunk",
          "preset-parsing",
          "instrument-parsing",
          "sample-parsing",
          "generator-validation",
          "modulator-validation",
          "loop-points",
          "sample-integrity",
          "memory-usage",
          "basic-playback"
        ],
        "duration": "3-8 minutes", 
        "useCase": "Production readiness validation"
      },
      "performance": {
        "description": "Performance and optimization testing",
        "tests": [
          "loading-speed",
          "parsing-performance",
          "memory-footprint", 
          "memory-leaks",
          "cpu-usage",
          "polyphony-stress",
          "large-file-handling",
          "streaming-performance",
          "garbage-collection",
          "audio-latency"
        ],
        "duration": "5-15 minutes",
        "useCase": "Performance optimization"
      },
      "compatibility": {
        "description": "EMU8000 compatibility validation",
        "tests": [
          "emu8000-generators",
          "voice-allocation",
          "envelope-curves",
          "filter-response",
          "lfo-behavior", 
          "effects-routing",
          "polyphony-limiting",
          "sample-interpolation",
          "pitch-accuracy",
          "timing-precision"
        ],
        "duration": "8-20 minutes",
        "useCase": "Hardware emulation accuracy"
      }
    },
    "qualityThresholds": {
      "excellent": {
        "minScore": 95,
        "maxLoadTime": 5000,
        "maxMemoryMB": 200,
        "minTestsPassed": 98
      },
      "good": {
        "minScore": 85,
        "maxLoadTime": 15000,
        "maxMemoryMB": 400,
        "minTestsPassed": 90
      },
      "fair": {
        "minScore": 70,
        "maxLoadTime": 30000,
        "maxMemoryMB": 600,
        "minTestsPassed": 80
      },
      "poor": {
        "minScore": 0,
        "maxLoadTime": 60000,
        "maxMemoryMB": 1000,
        "minTestsPassed": 0
      }
    },
    "performanceTargets": {
      "loading": {
        "small": "< 2s (< 50MB)",
        "medium": "< 10s (50-200MB)",
        "large": "< 30s (200-500MB)",
        "huge": "< 60s (> 500MB)"
      },
      "memory": {
        "efficient": "< 200MB total",
        "acceptable": "< 400MB total", 
        "heavy": "< 600MB total",
        "excessive": "> 600MB total"
      },
      "cpu": {
        "light": "< 15% (32 voices)",
        "moderate": "< 30% (32 voices)",
        "heavy": "< 45% (32 voices)",
        "excessive": "> 45% (32 voices)"
      }
    }
  },
