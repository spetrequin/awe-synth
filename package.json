{
	"name": "awe-synth",
	"version": "0.1.0",
	"description": "WebAssembly-based EMU8000 emulator with SoundFont 2.0 synthesis",
	"scripts": {
		"dev": "cd web && pnpm run dev",
		"serve": "cd web && pnpm run serve",
		"start": "cd web && pnpm run dev",
		"serve-dist": "cd web && pnpm run serve-dist",
		"build": "./web/scripts/build-production.sh",
		"build:staging": "./web/scripts/build-staging.sh",
		"build:wasm": "wasm-pack build --target web",
		"test": "serve -l 3000 web/test-build.html",
		"test:integration": "serve -l 3000 web/test-comprehensive-integration.html"
	},
	"dependencies": {
		"serve": "^14.2.3",
		"typescript": "^5.8.3"
	},
	"devDependencies": {
		"terser": "^5.27.0"
	},
	"type": "module"
}
