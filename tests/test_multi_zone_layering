cd /Users/stephan/Projects/Code/WASM/awe-synth
wasm-pack build --target web --quiet

if [ $? -eq 0 ]; then
    echo "âœ… WASM compilation successful with multi-zone features"
else
    echo "âŒ WASM compilation failed"
